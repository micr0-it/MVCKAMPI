@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddCategory</h2>
@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı ")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" }) @*burası yukarda kullandıgımız modele gore property getirir*@
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br /> <br />
        @Html.Label("Açıklama Yaz ")
        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" }) @*burası yukarda kullandıgımız modele gore property getirir*@
        @Html.ValidationMessageFor(x => x.CategoryDescription)
        <br /> <br />
        <button class="btn btn-success">Kategoriyi Kaydet</button>
    </div>
}

