@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Kategori Güncelleme Sayfası</h2>
@using (Html.BeginForm("EditCategory", "AdminCategory", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Kategori ID ")
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" }) @*burası yukarda kullandıgımız modele gore property getirir*@
    @Html.ValidationMessageFor(x => x.CategoryName)
    <br /> <br />
    @Html.Label("Kategori Adı")
    @Html.TextAreaFor(x => x.CategoryName, new { @class = "form-control" }) @*burası yukarda kullandıgımız modele gore property getirir*@
    @Html.ValidationMessageFor(x => x.CategoryDescription)
    <br /> <br />
    @Html.Label("Kategori Açıklaması")
    @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" }) @*burası yukarda kullandıgımız modele gore property getirir*@
    @Html.ValidationMessageFor(x => x.CategoryDescription)
    <br /> <br />
    <button class="btn btn-success">Kategoriyi Güncelle</button>
</div>
}

